@model IEnumerable<DadoVolumetrico>
@{ 

    string nomes="";
    string valores = "";
    foreach (var item in Model)
    {
        nomes += "'" + item.DataCadastro.ToString("dd/MM/yyyy hh:mm:ss") + "',";
        valores += item.Valor.ToString() + ",";

    }
}

<div class="wrapper">
    <canvas id="myChart" class="chart-container" style="position: relative; height:40vh; width:80vw"></canvas>
    </div>
    <script src="~/js/chart.min.js"></script>
    <script>
    var ctx = document.getElementById('myChart').getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: [@Html.Raw(nomes)],
            datasets: [{
                label: '# Valores',
                data: [@valores],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
    </script>
